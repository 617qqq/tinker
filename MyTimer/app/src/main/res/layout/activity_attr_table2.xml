<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lyq.attr_graph.AttrGraphView
        android:id="@+id/attr_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:onClick="onClickAddAttr"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="增加属性"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:onClick="onClickReduceAttr"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="减少属性"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:onClick="onClickAddFrame"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="增加边框"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:onClick="onClickReduceFrame"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="减少边框"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_animation"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:onClick="animation"
            android:text="整体动画"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_random"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:onClick="random"
            android:text="随机数值"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>