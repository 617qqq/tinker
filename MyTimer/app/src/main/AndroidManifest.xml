<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lyq.mytimer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true"></uses-feature>

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".MainActivity"
            android:theme="@style/Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.DpiActivity"></activity>

        <activity android:name=".ui.AttrTableViewActivity" />
        <activity android:name=".ui.AttrTableView2Activity" />

        <activity android:name=".resume.MyResumeActivity" />

        <activity android:name=".ipc.file_share.FileShareActivityMain" />

        <activity
            android:name=".ipc.file_share.FileShareActivityClient"
            android:process=":file_share" />

        <activity android:name=".ipc.bundle.BundleActivityMain"></activity>

        <activity
            android:name=".ipc.bundle.BundleActivityClient"
            android:process=":bundle" />

        <activity android:name=".ipc.messenger.MessengerActivityMain"></activity>

        <service
            android:name=".ipc.messenger.MessengerService"
            android:process=":messenger" />

        <activity android:name=".ipc.aidl.AIDLActivityMain"></activity>

        <service
            android:name=".ipc.aidl.BookManagerService"
            android:process=":aidl" />

        <activity android:name=".ipc.aidl_demo.BookManagerActivity"></activity>

        <service
            android:name=".ipc.aidl_demo.BookManagerService"
            android:process=":aidl_demo" />

        <provider
            android:name=".ipc.content_provider.BookProvider"
            android:authorities="com.lyq.mytimer.ipc.book_provider"
            android:permission="com.lyq.PROVIDER"
            android:process=":provider" />

        <activity android:name=".ipc.socket.TCPClientActivity" />
        <service android:name=".ipc.socket.TCPServerService" />

        <activity android:name=".ipc.content_provider.ProviderActivity"></activity>
        <activity android:name=".ui.MusicAnimActivity" />
        <activity android:name=".ui.DebutActivity" />
        <activity android:name=".ui.Rotate3dAnimationActivity" />
        <activity android:name=".ui.ControlActivity" />
        <activity android:name=".ui.TimeActivity" />
        <activity android:name=".ui.ShadowActivity" />

        <activity android:name=".ui.SceneChangeBoundsActivity" />
        <activity android:name=".ui.WebActivity" />
        <activity android:name=".ui.WebX5Activity" />
        <activity android:name=".ui.VectorActivity" />
        <activity android:name=".ui.RvAnimActivity" />

        <service
            android:name=".utils.NormalWallpaperService"
            android:enabled="true"
            android:label="@string/wallpaper_name"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/normal_wallpaper" />
        </service>

        <activity
            android:name=".ui.SettingActivity"
            android:exported="true"
            android:label="@string/app_name" />

        <activity android:name=".ui.TransparentActivity"
            android:theme="@style/Transparent"/>

        <activity android:name=".ui.KnobActivity"/>
        <activity android:name=".ui.FontStyleActivity" />
    </application>

</manifest>