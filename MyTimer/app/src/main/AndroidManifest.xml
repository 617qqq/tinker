<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lyq.mytimer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--bugly应用升级-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <!--bugly应用升级-->

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" />

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning,Un usedAttribute,UnusedAttribute"
        tools:targetApi="m">

        <activity android:name=".ui.ButterflyActivity">

        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.LottieActivity" />
        <activity android:name=".ui.BackActivity" />
        <activity android:name=".ui.DpiActivity" />

        <activity android:name=".ui.AttrTableViewActivity" />
        <activity android:name=".ui.AttrTableView2Activity" />

        <activity android:name=".resume.MyResumeActivity" />

        <activity android:name=".ipc.file_share.FileShareActivityMain" />

        <activity
            android:name=".ipc.file_share.FileShareActivityClient"
            android:process=":file_share" />

        <activity android:name=".ipc.bundle.BundleActivityMain" />

        <activity
            android:name=".ipc.bundle.BundleActivityClient"
            android:process=":bundle" />

        <activity android:name=".ipc.messenger.MessengerActivityMain" />

        <service
            android:name=".ipc.messenger.MessengerService"
            android:process=":messenger" />

        <activity android:name=".ipc.aidl.AIDLActivityMain" />

        <service
            android:name=".ipc.aidl.BookManagerService"
            android:process=":aidl" />

        <activity android:name=".ipc.aidl_demo.BookManagerActivity" />

        <service
            android:name=".ipc.aidl_demo.BookManagerService"
            android:process=":aidl_demo" />

        <provider
            android:name=".ipc.content_provider.BookProvider"
            android:authorities="com.lyq.mytimer.ipc.book_provider"
            android:permission="com.lyq.PROVIDER"
            android:process=":provider" />

        <activity android:name=".ipc.socket.TCPClientActivity" />
        <service android:name=".ipc.socket.TCPServerService" />

        <activity android:name=".ipc.content_provider.ProviderActivity" />
        <activity android:name=".ui.MusicAnimActivity" />
        <activity android:name=".ui.DebutActivity" />
        <activity android:name=".ui.Rotate3dAnimationActivity" />
        <activity android:name=".ui.ControlActivity" />
        <activity android:name=".ui.TimeActivity" />
        <activity android:name=".ui.ShadowActivity" />

        <activity android:name=".ui.SceneChangeBoundsActivity" />
        <activity android:name=".ui.WebActivity" />
        <activity android:name=".ui.WebX5Activity" />
        <activity android:name=".ui.VectorActivity" />
        <activity android:name=".ui.RvAnimActivity" />

        <service
            android:name=".utils.NormalWallpaperService"
            android:enabled="true"
            android:label="@string/wallpaper_name"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter android:priority="1">
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/normal_wallpaper" />
        </service>

        <activity
            android:name=".ui.SettingActivity"
            android:exported="true"
            android:label="@string/app_name" />

        <activity
            android:name=".ui.TransparentActivity"
            android:theme="@style/Transparent" />

        <activity android:name=".ui.KnobActivity" />
        <activity android:name=".ui.FontStyleActivity" />
        <activity android:name=".ui.recycler.RecyclerAnimationActivity"/>

        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".ui.UpgradeActivity" />
        <activity android:name=".ui.GoToFileManagerActivity" />
        <activity android:name=".ui.WifiTestActivity" />

        <provider
            android:name=".utils.upgrade.BuglyUpgradeFileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="name,authorities,exported,grantUriPermissions">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/mytimer_upgrade"
                tools:replace="name,resource" />
        </provider>

        <!-- 兼容9.0 不存在Apache HTTP库-->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>